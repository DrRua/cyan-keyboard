{
  "name": "electron-vite",
  "author": "mocan",
  "private": true,
  "version": "0.0.0",
  "main": "app/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "start": "npm run electron:dev",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "cnpm rebuild --runtime=electron --target=17.1.2 --disturl=https://atom.io/download/atom-shell --abi=101",
    "packager": "electron-packager ./dist/ --platform=win32 --arch=x64 --overwrite",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "electron:build.win": "npm run build && electron-builder --win --dir",
    "electron:build.linux": "npm run build && electron-builder --linux appImage",
    "electron:build.test": "npm run build && electron-builder --dir",
    "electron:build.exe": "npm run build && electron-builder --win",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "dayjs": "^1.11.0",
    "echarts": "^5.3.1",
    "iohook": "^0.9.3",
    "vue": "^3.2.25",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.2.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^17.3.0",
    "electron-builder": "^22.14.13",
    "electron-packager": "^15.4.0",
    "electron-rebuild": "^3.2.7",
    "electron-store": "^8.0.1",
    "robotjs": "^0.6.0",
    "sass": "^1.49.9",
    "vite": "^2.8.0",
    "wait-on": "^6.0.1"
  },
  "iohook": {
    "targets": [
      "node-93",
      "electron-101"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  },
  "build": {
    "productName": "MoCanKeyBoard",
    "copyright": "Copyright Â© 2022 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "dist_electron"
    },
    "extraResources": [
      {
        "from": "app/assets/",
        "to": "./assets"
      }
    ],
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "app/assets/mocan.png"
    }
  },
  "portable": {
    "unicode": false,
    "artifactName": "MoCanKeyBoard_green.exe"
  },
  "__npminstall_done": false
}
